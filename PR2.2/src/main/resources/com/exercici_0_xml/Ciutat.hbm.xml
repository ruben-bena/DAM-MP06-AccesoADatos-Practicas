<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.exercici_0_xml.Ciutat" table="CIUTAT">
        <id name="ciutatId" column="ciutatId">
            <generator class="identity"/>
        </id>
        <property name="nom" column="nom"/>
        <property name="pais" column="pais"/>
        <property name="poblacio" column="poblacio"/>

        <set name="ciutadans" table="CIUTADA" cascade="all">
            <key column="ciutat_id" />
            <one-to-many class="com.exercici_0_xml.Ciutada" />
        </set>
    </class>
</hibernate-mapping>